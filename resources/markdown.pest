Document = {
	SOI ~ (Title | Paragraph | NEWLINE)+ ~ EOI
}

Title = @{
	"#"+ ~ (!NEWLINE ~ ANY)* ~ &NEWLINE?
}

Paragraph = {
	(Word | Time | Other)+ ~ &NEWLINE?
}

Word = @{
    (LETTER+ ~ ("'" ~ LETTER+)?) | (LETTER+ ~ ("-" ~ LETTER+)+)
}

Other = @{
    (LETTER | PUNCTUATION | NUMBER | SYMBOL)+
}

Time = @{
    NUMBER+ ~ ":" ~ NUMBER+
}

// Pest supports these rules implicitly when defined
COMMENT = _{
    "<!--" ~ (!"-->" ~ ANY)* ~ "-->"
}

WHITESPACE = _{
    " " | "," | "." | "!" | "?" | "*" | "-" | "â€”" | ":" | ";" | "'" | "\""
}
